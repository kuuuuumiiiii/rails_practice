<div class="p-comment__item">
  <p><%= simple_format(comment.comment) %></p>
  <div class="p-comment__bottomLine">
    <span><%= comment.name %></span>
    <span><%= comment.created_at.to_formatted_s(format = :datetime_jp) %></span>
    <span><%= button_to '削除', comment, { method: :delete, form: { data: { turbo_confirm: '削除してよろしいですか？' } } } %></span>
  </div>
</div>